{
    "languageserver":{
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c", "cpp", "objc", "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".config/nvim/",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "highlight": { "lsRanges": true }
            }
        }
    }
}
